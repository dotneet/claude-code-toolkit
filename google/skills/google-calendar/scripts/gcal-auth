#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
VENV_DIR="${HOME}/.config/google-calendar/venv"

if [[ -x "${VENV_DIR}/bin/python" ]]; then
    exec "${VENV_DIR}/bin/python" "${SCRIPT_DIR}/gcal_auth.py" "$@"
else
    exec python3 "${SCRIPT_DIR}/gcal_auth.py" "$@"
fi
